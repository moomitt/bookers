<h1>Books</h1>
<table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan=3></th>
     </tr>
   </thead>
  
   <% @books.each do |book| %>
   <tbody>
     <span class="book-title"><%= book.title %></span>
     <span class="book-body"><%= book.body %></span>
     <%= link_to "show", book_path(book.id) %>
     <%= link_to "edit", edit_path(book.id) %>
     <!--destroyボタン-->
   </tbody>
   <% end %>
   
</table>


<h2>New Book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
  
<% end %>